<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    Set Margin Here -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp"
        android:top="0dp">

        <!-- Insert your shape here: -->
        <shape android:shape="rectangle">
            <solid android:color="@color/color9_Snack" />

            <!-- Padding for inner text-->
            <padding android:left="25dp" android:right="10dp" android:bottom="0dp" android:top="25dp" />
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"/>

        </shape>
    </item>
</layer-list>