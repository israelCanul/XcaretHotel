    <style name="Widget.Neumorph.Separator">
        <item name="android:layout_height">3dp</item>
        <item name="neomorph_elevation">1dp</item>
        <item name="neomorph_background_color">@color/colorSeparatorBackground</item>
        <item name="neomorph_highlight_color">@color/colorSeparatorLight</item>
        <item name="neomorph_shadow_color">@color/colorSeparatorDark</item>
        <item name="neomorph_shadow_type">inner</item>
    </style>

    <style name="Widget.Neumorph.OrangeButton">
        <item name="neomorph_background_color">@color/colorButtonOrange</item>
        <item name="neomorph_highlight_color">@color/colorButtonOrangeLight</item>
        <item name="neomorph_shadow_color">@color/colorButtonOrangeDark</item>
        <item name="neomorph_elevation">@dimen/elevation_short</item>
        <item name="neomorph_corner_radius">@dimen/radius_short</item>
    </style>

    <style name="Widget.Neumorph.BlueButton">
        <item name="neomorph_background_color">@color/colorButtonBlue</item>
        <item name="neomorph_highlight_color">@color/colorButtonBlueLight</item>
        <item name="neomorph_shadow_color">@color/colorButtonBlueDark</item>
        <item name="neomorph_elevation">@dimen/elevation_short</item>
        <item name="neomorph_corner_radius">@dimen/radius_default</item>
    </style>

    <style name="Widget.Neumorph.BlueButtonNoShadow">
        <item name="neomorph_background_color">@color/colorButtonBlue</item>
        <item name="neomorph_highlight_color">@color/colorButtonBlueLight_Transparency</item>
        <item name="neomorph_shadow_color">@color/colorButtonBlueDark_Transparency</item>
        <item name="neomorph_elevation">@dimen/elevation_short</item>
        <item name="neomorph_corner_radius">@dimen/radius_default</item>
    </style>

    <style name="Widget.Neumorph.PinkButton">
        <item name="neomorph_background_color">@color/colorButtonPink</item>
        <item name="neomorph_highlight_color">@color/colorButtonPinkLight</item>
        <item name="neomorph_shadow_color">@color/colorButtonPinkDark</item>
        <item name="neomorph_elevation">@dimen/elevation_short</item>
        <item name="neomorph_corner_radius">@dimen/radius_short</item>
    </style>

    <style name="Widget.Neumorph.White" parent="Widget.Neumorph.CardView">
        <item name="neumorph_backgroundColor">@color/colorCardBackground</item>
        <!--        <item name="neumorph_shadowColorLight">@color/colorShadowLight</item>-->
        <item name="neumorph_shadowColorLight">@color/colorShadowLightTrasparency</item>
        <item name="neumorph_shadowColorDark">@color/colorShadowBottom1</item>
        <item name="neumorph_strokeColor">@color/colorCardOutline</item>
        <item name="neumorph_strokeWidth">1dp</item>
    </style>

    <style name="Widget.Neumorph.Quotes" parent="Widget.Neumorph.CardView">
        <item name="neumorph_backgroundColor">@color/colorCardBackgroundQuotes</item>
        <item name="neumorph_shadowColorLight">@color/colorCardLightQuotes</item>
        <item name="neumorph_shadowColorDark">@color/colorCardDarkQuotes</item>
        <item name="neumorph_strokeColor">@color/colorCardOutlineQuotes</item>
        <item name="neumorph_strokeWidth">1dp</item>
    </style>

    <style name="Widget.Neumorph.Location" parent="Widget.Neumorph.CardView">
        <!--        <item name="neumorph_shadowColorLight">@color/colorLocationLight</item>-->
        <item name="neumorph_shadowColorLight">@color/colorLocationLightTransparency</item>
        <item name="neumorph_shadowColorDark">@color/colorLocationDark</item>
    </style>

    <style name="AppTheme.TimePickerDialog" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="showTitle">false</item>
        <item name="colorControlActivated">#ffd600</item>
        <item name="colorAccent">#b71c1c</item>
        <item name="android:textColorPrimary">#43a047</item>
        <item name="android:textColorSecondary">#f44336</item>
    </style>

    <style name="Widget.SnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!--      color for photo pass-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>